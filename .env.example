# This file contains the environment variables for the ESPManager application.
# Copy this file to .env and fill in the values.

# This secret is used to sign and verify JSON Web Tokens.
# Choose a long, random, and secret string.
JWT_SECRET=your_super_secret_jwt_key

# MQTT Broker Configuration
# The host or IP address of your MQTT broker.
MQTT_HOST=localhost
# The port for your MQTT broker.
MQTT_PORT=1883
# The username for your MQTT broker (if required).
MQTT_USERNAME=
# The password for your MQTT broker (if required).
MQTT_PASSWORD=

# Database storage path.
# For local development, this path is relative to the project root.
# In Docker, this path is relative to the app's working directory (/usr/src/app).
DB_STORAGE=./data/database.sqlite

# MQTT Topic Configuration
# These are the base topics for device communication. The device ID will be appended.
MQTT_STATUS_TOPIC=device/status
MQTT_COMMAND_TOPIC=device/command
MQTT_INFO_TOPIC=device/info
